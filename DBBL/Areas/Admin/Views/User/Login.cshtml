@model CongTy
@{
    ViewData["Title"] = "Login";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="row signup">
        <div class="col-12">
            <div class="card w-50 mb-4 mx-auto">
                <h5 class="card-header text-center">Đăng Nhập</h5>
            <div class="card-body">
                <form id="formAuthentication" class="mb-3" asp-action="Login" method="POST">

                    <div class="mb-4 form-control1">
                        <label asp-for="EmailNql" class="form-label">Email</label>
                        <input type="text" class="form-control" id="email" asp-for="EmailNql" placeholder="Enter your email or username" autofocus>
                        <span asp-validation-for="EmailNql" class="text-danger"></span>
                    </div>
                    <div class="mb-4 form-password-toggle form-control1">
                        <label class="form-label" asp-for="Mk">Mật Khẩu</label>                           
                            <input type="password" id="password" class="form-control" asp-for="Mk" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" aria-describedby="password" />                              
                            <span asp-validation-for="Mk" class="text-danger"></span>                   
                    </div>                    
                    <div class="mb-3">
                        <button class="d-grid w-100 submit" type="submit">Đăng Nhập</button>
                    </div>
                </form>                 
            </div>
        </div>
        </div>
    </div>
</div>

